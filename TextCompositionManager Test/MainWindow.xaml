<Window x:Class="TextCompositionManager_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextCompositionManager_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Name="tbSearch" TextChanged="tbSearch_TextChanged" PreviewKeyDown="tbSearch_PreviewKeyDown" Height="30" ForceCursor="True" VerticalAlignment="Top"/>
        <TextBlock Name="tbLog" Height="280" VerticalAlignment="Bottom" Background="LightGray"/>
    </Grid>
</Window>
